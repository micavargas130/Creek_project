{
  "compilerOptions": {
    "target": "ES2020",                // Define la versión de JavaScript a compilar
    "module": "CommonJS",             // Configura el sistema de módulos como CommonJS
    "strict": true,                   // Habilita todas las comprobaciones estrictas
    "esModuleInterop": true,          // Facilita la importación de módulos CommonJS
    "skipLibCheck": true,             // Ignora la comprobación de tipos de las dependencias
    "outDir": "./dist"                // Define el directorio de salida
  },
  "include": ["tests/**/*.ts", "src/**/*.ts"], // Define los archivos que TypeScript debe procesar
  "exclude": ["node_modules"]
}